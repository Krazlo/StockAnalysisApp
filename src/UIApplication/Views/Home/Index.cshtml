@model UIApplication.Models.AnalysisViewModel

@{
    ViewData["Title"] = "Aktieanalyse med AI";
}

<div class="container mt-4">
    <h1 class="mb-4">Aktieanalyse med AI</h1>

    <div class="row">
        <!-- Main Analysis Form -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        Analyser aktie
                        <span id="loadingIndicator" style="display:none;">
                            <span class="spinner-border spinner-border-sm ms-3" role="status"></span>
                            <span class="ms-2">Indlæser...</span>
                        </span>
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Analyze" method="post" id="analyzeForm">
                        <input type="hidden" name="usedPromptId" value="@Model.UsedPromptId" />
                        @Html.AntiForgeryToken()
                        <div class="mb-3 row align-items-end">
                            <div class="col-md-6">
                                <label for="symbol" class="form-label">Aktiesymbol</label>
                                <input type="text" class="form-control" id="symbol" name="symbol"
                                       value="@Model.Symbol" placeholder="f.eks. AAPL, MSFT, GOOGL" required>
                                <small class="form-text text-muted">Indtast aktiens ticker-symbol</small>
                            </div>
                            <div class="col-md-6">
                                <label for="exchange" class="form-label">Børs</label>
                                <input type="text" class="form-control" id="exchange" name="exchange"
                                       value="@Model.Exchange" placeholder="f.eks. US, CO" required>
                                <small class="form-text text-muted">Indtast børsforkortelse</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="prompt" class="form-label">Analyseprompt</label>
                            <textarea class="form-control" id="prompt" name="prompt" rows="12"
                                      placeholder="f.eks. Analyser den nuværende trend og giv købs-/salgsmuligheder" required>@Model.Prompt</textarea>
                            <small class="form-text text-muted">Beskriv hvilken type analyse du ønsker</small>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            Analyser aktie
                        </button>

                        @if (!string.IsNullOrEmpty(Model.Prompt) && !string.IsNullOrEmpty(Model.Symbol))

                        {
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#saveModal">
                                Gem denne prompt
                            </button>
                        }
                    </form>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))

                    {
                        <div class="alert alert-danger mt-3">
                            @Model.ErrorMessage
                        </div>
                    }
                </div>
            </div>

            <!-- Analysis Results -->
            @if (!string.IsNullOrEmpty(Model.Analysis))
            {
                <div class="card mt-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">AI-analyseresultat for @Model.Symbol</h5>
                    </div>
                    <div class="card-body">
                        <div class="analysis-content">
                            @Html.Raw(Model.Analysis.Replace("\n", "<br>"))
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Saved Prompts Sidebar -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Gemte prompts</h5>
                </div>
                <div class="card-body">
                    @if (Model.SavedPrompts.Any())

                    {
                        <div class="list-group">
                            @foreach (var savedPrompt in Model.SavedPrompts.OrderByDescending(p => p.Id))

                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@savedPrompt.Title</h6>
                                        <small>@savedPrompt.Id</small>
                                    </div>
                                    
                                    <p class="mb-2 text-muted small">@(savedPrompt.Prompt.Length > 50 ? savedPrompt.Prompt.Substring(0, 50) + "..." : savedPrompt.Prompt)</p>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="LoadPrompt" asp-route-id="@savedPrompt.Id" class="btn btn-outline-primary @(Model.UsedPromptId == savedPrompt.Id ? "active" : "")">
                                            Indlæs
                                        </a>
                                        <form asp-action="DeletePrompt" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@savedPrompt.Id" />
                                            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Slet denne gemte prompt?')">
                                                Slet
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    else

                    {
                        <p class="text-muted">Ingen gemte prompts endnu. Gem din første prompt for at genbruge den senere!</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Save Prompt Modal -->
<div class="modal fade" id="saveModal" tabindex="-1" aria-labelledby="saveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="SavePrompt" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="symbol" value="@Model.Symbol" />
                <input type="hidden" name="exchange" value="@Model.Exchange" />

                <div class="modal-header">
                    <h5 class="modal-title" id="saveModalLabel">Gem prompt</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Luk"></button>
                </div>

                <div class="modal-body">

                    <div class="mb-3">
                        <label for="name" class="form-label">Titel til denne gemte prompt</label>
                        <input type="text"
                               class="form-control"
                               id="name"
                               name="name"
                               placeholder="f.eks. Apple trendanalyse"
                               required />
                    </div>

                    <div class="mb-3">
                        <label for="prompt" class="form-label">Prompt indhold</label>
                        <textarea class="form-control"
                                  id="prompt"
                                  name="prompt"
                                  rows="5"
                                  required>@Model.Prompt</textarea>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuller</button>
                    <button type="submit" class="btn btn-primary">Gem</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Styles {
    <style>
        .analysis-content {
            white-space: pre-wrap;
            line-height: 1.6;
        }

        .list-group-item {
            margin-bottom: 10px;
        }
    </style>
}

@section Scripts {
    <script>
        document.getElementById("analyzeForm").addEventListener("submit", function () {
            document.getElementById("loadingIndicator").style.display = "inline-block";
        });
    </script>
}
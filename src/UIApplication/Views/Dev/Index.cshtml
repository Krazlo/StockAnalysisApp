@model UIApplication.Controllers.DevDashboardViewModel

@{
    ViewData["Title"] = "Developer Dashboard";
}

<h1>@ViewData["Title"]</h1>
<p class="text-muted">Overview of user activity and system data. Only accessible to Admin users.</p>

<div class="row">
    <div class="col-md-12">
        <h2>System Overview</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Metric</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Total Users</td>
                    <td>@Model.UserStats.Count</td>
                </tr>
                <tr>
                    <td>Total Prompts Used</td>
                    <td>@Model.UserStats.Sum(u => u.PromptsUsed)</td>
                </tr>
                <tr>
                    <td>Total Stocks Analyzed</td>
                    <td>@Model.UserStats.Sum(u => u.StocksAnalyzed)</td>
                </tr>
                <tr>
                    <td>Total Historical Stock Data Points (Placeholder)</td>
                    <td>@Model.TotalHistoricalDataCount</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <h2>User Statistics <a asp-action="CreateUser" class="btn btn-sm btn-success float-end">Create New User</a></h2>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Prompts Used</th>
                    <th>Stocks Analyzed</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UserStats)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@(user.IsAdmin ? "Admin" : "User")</td>
                        <td>@user.PromptsUsed</td>
                        <td>@user.StocksAnalyzed</td>
                        <td>
                            <form asp-action="ToggleAdmin" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm @(user.IsAdmin ? "btn-warning" : "btn-info")">
                                    @(user.IsAdmin ? "Demote to User" : "Promote to Admin")
                                </button>
                            </form>
                            <form asp-action="DeleteUser" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
